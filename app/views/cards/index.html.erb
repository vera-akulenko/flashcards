<ul class="navigation-links">
  <li><%= link_to "Добавить карточку", new_card_path %></li>
</ul>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>German</th>
      <th>English</th>
      <th>Review date</th>
      <th>        </th>
      <th>        </th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
        <td><%= link_to "Редактировать", edit_card_path(card) %></td>
        <td><%= link_to "Удалить", card_path(card), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
